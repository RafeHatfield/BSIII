		<set name="attributes.con_attach6Desc" value="" />
		<set name="attributes.img_id" value="" />
		<set name="attributes.img_name" value="" />
		<set name="attributes.img_title" value="" />
		<set name="attributes.img_altText" value="" />
	</false>
	
</if>

